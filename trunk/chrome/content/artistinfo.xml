<?xml version="1.0"?>
<!DOCTYPE bindings PUBLIC "-//MOZILLA//DTD XBL V1.0//EN" "http://www.mozilla.org/xbl">

<bindings
    xmlns="http://www.mozilla.org/xbl"
    xmlns:xbl="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <binding id="artistinfo">
    <content>
      <xul:hbox class="artistinfo-outter">
        <xul:image xbl:inherits="src=artistImage, collapsed=hideArtistImage, tooltiptext=artistName"
                   class="artistinfo-image" 
                   onclick="SmartyPants.PaneController.onArtistClick(document.getBindingParent(this), event)" />
        <xul:vbox class="artistinfo-labelbox">
          <xul:hbox>
            <xul:label xbl:inherits="value=artistName,tooltiptext=artistName"
                       class="artistinfo-artistname"
                       crop="end"
                       flex="1" 
                       onclick="SmartyPants.PaneController.onArtistClick(document.getBindingParent(this), event)" />
          </xul:hbox>
          <xul:spacer flex="1" />
          <xul:hbox xbl:inherits="hidden=hideArtistScore">
            <xul:label xbl:inherits="value=artistScore"
                       class="artistinfo-artistscore"
                       flex="1" />
          </xul:hbox>
        </xul:vbox>
      </xul:hbox>
    </content>
    
    <implementation>
    </implementation>
    
    <handlers>
    </handlers>
  </binding>

</bindings>
